{
	"extends": ["next/core-web-vitals", "plugin:prettier/recommended"],
	"rules": {
		"import/order": [
			"warn",
			{
				"groups": [
					"type",
					"builtin",
					"object",
					"external",
					"internal",
					"parent",
					"sibling",
					"index"
				],
				"pathGroups": [
					{
						"pattern": "~/**",
						"group": "external",
						"position": "after"
					}
				]
			}
		],
		"no-console": "warn",
		"no-unused-vars": [
			"warn",
			{
				"args": "after-used",
				"ignoreRestSiblings": false,
				"argsIgnorePattern": "^_.*?$"
			}
		],
		"padding-line-between-statements": [
			"error",
			{ "blankLine": "always", "prev": "*", "next": "return" },
			{ "blankLine": "always", "prev": ["const", "let", "var"], "next": "*" },
			{
				"blankLine": "any",
				"prev": ["const", "let", "var"],
				"next": ["const", "let", "var"]
			}
		],
		"prettier/prettier": [
			"error",
			{},
			{
				"usePrettierrc": true
			}
		],
		"react/self-closing-comp": "warn",
		"react/jsx-sort-props": [
			"warn",
			{
				"callbacksLast": true,
				"shorthandFirst": true,
				"noSortAlphabetically": false,
				"reservedFirst": true
			}
		]
	}
}
